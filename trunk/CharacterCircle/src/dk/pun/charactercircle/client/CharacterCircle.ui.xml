<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:charactercircle='urn:import:dk.pun.charactercircle.client'>

  <g:DockLayoutPanel unit='EM'>
    <g:north size='5'>
      <charactercircle:TopPanel ui:field='topPanel' />
    </g:north>

    <g:center>
      <g:SplitLayoutPanel>
        <g:north size='200'>
          <charactercircle:CharacterAspectList ui:field='characterAspectList' />
        </g:north>

        <g:center>
        	<g:SimplePanel ui:field="characterAspectContent" />
        </g:center>
      </g:SplitLayoutPanel>
    </g:center>
  </g:DockLayoutPanel>

</ui:UiBinder>
